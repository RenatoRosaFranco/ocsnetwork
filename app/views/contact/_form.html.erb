      <%= f.label :name %>
      <%- f.text_field :name, class: 'form-control', required: 'required',
      placeholder: 'Digite o nome', autocomplete: 'off' %>
    </div>
  </div>

  <div class="field">
    <div class="col-md-6">
      <%= f.label :phone %>
      <%= f.phone_field :phone, class: 'form-control', required: 'required',
      placeholder: 'Digite o telefone', autocomplete:'off' %>
    </div>
  </div>

  <div class="field">
    <div class="col-md-12">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', required: 'required',
    placeholder: 'Digite o e-mail', autocomplete: 'off' %>
   </div>
  </div>

  <div class="field">
    <div class="col-md-12">
      <%= f.label :message %>
